<div class="container text-center">
   <div class="row">
      <div class="col-md-4">
         <img class="img-thumbnail" src="{{Car.image}}" width="350" height="350">
      </div>
      <div class="col-md-6">
         <table class="table table-bordered text-center mt-4">
            <tr>
               <th colspan="2" class="text text-bg-success">Car Info</th>
            </tr>
            <tr>
               <th>Name</th>
               <th>{{Car.name}}</th>
            </tr>
            <tr>
               <th>Year</th>
               <th>{{Car.year}}</th>
            </tr>
            <tr>
               <th>Classify</th>
               <th>{{Car.classify}}</th>
            </tr>
             <tr>
               <th>Status</th>
               <th>{{Car.status}}</th>
            </tr>
         </table>
      </div>
   </div>
</div>
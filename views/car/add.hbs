<div class="container col-md-8 mt-5">
   <form action="/car/add" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Add new car</h2>
      <div class="form-group">
         <label class="text-success h6">Name</label>
         <input class="form-control" type="text" name="name" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Image</label>
         <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Year</label>
         <input class="form-control" type="text" name="year" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Classify</label>
         <input class="form-control" type="text" name="classify" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Status</label><br>
         In stock <input type="radio" name="status" value="In stock">
         Sold out <input type="radio" name="status" value="Sold out">
      </div>

      <div class="form-group mt-3">
         <input class="btn btn-primary mt-3" type="submit" value="Add">
      </div>
   </form>
</div>